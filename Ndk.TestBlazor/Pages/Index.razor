@page "/"
@using System.Text.Json
@inject IJSRuntime _js


<NDKInputNumber @bind-Value="Model.Decimal" 
               Id="1"/>
<NDKInputText @bind-Value="Model.String" Id="2"/>

<EditForm Model="Model">
    <InputNumber @bind-Value="Model.Decimal"></InputNumber>
</EditForm>
@code {
    protected InputModel Model = new InputModel();
    
    public class InputModel
    {
        public decimal Decimal { get; set; }
        public int Int { get; set; }
        public long Long { get; set; }
        public float Float { get; set; }
        public string String { get; set; } = "Tes";
    }
}
