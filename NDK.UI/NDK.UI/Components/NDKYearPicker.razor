@inherits NDKBaseInput<int>

@if (Calendar is null || (Calendar is not null && Calendar.ShowYearPicker))
{

    <div class="ndk-year-picker-container @GetClass()">

        <div class="ndk-year-picker ">

            <div class="ndk-year-picker-header">
                <span class="ndk-year-picker-header-value">
                    @($"{ControlYear - 6} - {ControlYear + 5}")
                </span>

            </div>
            <div class="ndk-year-picker-header">

                <div class="w-70p d-flex">
                    <span class="ndk-calendar-control" @onclick="(() => SetCurrentYear())">@Options.CurrentYearAlias</span>


                    @if (Calendar is null)
                    {
                        <span class="ndk-calendar-control" @onclick="(() => Clear())">@Options.ClearAlias</span>
                    }
                </div>



                <div class="w-30p d-flex">

                    <span class="ndk-calendar-control" onclick="@(() => SetBaseYear(-6))">
                        <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M560-240 320-480l240-240 56 56-184 184 184 184-56 56Z" /></svg>
                    </span>
                    <span class="ndk-calendar-control" onclick="@(() => SetBaseYear(6))">
                        <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M504-480 320-664l56-56 240 240-240 240-56-56 184-184Z" /></svg>
                    </span>
                </div>
            </div>

            @{

                foreach (var yl in DataSource)
                {
                    <div class="ndk-year-picker-line">

                        @foreach (var yi in yl.Items)
                        {
                            <div class="ndk-year-picker-item-container">
                                <span class="@($"ndk-year-picker-item {(yi.ShowEmpty ? "ndk-year-picker-item-disabled":"-")} {(yi.IsSelected ? "ndk-year-picker-item-selected-ui":"")}")"
                                      onclick="@(() => SetYear(yi))">

                                    @($"{(yi.ShowEmpty ? "-" : yi.Value)}")
                                </span>
                            </div>
                        }

                    </div>
                }
            }
        </div>

    </div>

}


